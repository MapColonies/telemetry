{
  "compilerOptions": {
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
  },
  "include": ["src", "scripts"],
  "exclude": ["dist", "node_modules"],
}
